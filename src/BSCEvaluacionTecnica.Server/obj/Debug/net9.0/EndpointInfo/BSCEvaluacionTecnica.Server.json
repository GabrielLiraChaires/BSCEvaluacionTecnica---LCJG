  "components": {
    "schemas": {
      "DetallePedidoDTO": {
        "type": "object",
        "properties": {
          "fkIdPedido": {
            "type": "integer",
            "format": "int32"
          },
          "fkClaveProducto": {
            "type": "string",
            "nullable": true
          },
          "cantidad": {
            "type": "integer",
            "format": "int32"
          },
          "subTotal": {
            "type": "number",
            "format": "double"
          },
          "producto": {
            "$ref": "#/components/schemas/ProductoDTO"
          }
        },
        "additionalProperties": false
      },
      "LoginDTO": {
        "required": [
          "clave",
          "correo"
        ],
        "type": "object",
        "properties": {
          "correo": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "clave": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "PedidoDTO": {
        "required": [
          "cliente"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "fechaHora": {
            "type": "string",
            "format": "date-time"
          },
          "cliente": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "fkIdVendedor": {
            "type": "integer",
            "format": "int32"
          },
          "vendedor": {
            "$ref": "#/components/schemas/UsuarioDTO"
          }
        },
        "additionalProperties": false
      },
      "ProductoDTO": {
        "required": [
          "clave",
          "costoUnidad",
          "existencias",
          "nombre"
        ],
        "type": "object",
        "properties": {
          "clave": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "nombre": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "existencias": {
            "type": "integer",
            "format": "int32"
          },
          "costoUnidad": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "ProductoDTOResponseAPI": {
        "type": "object",
        "properties": {
          "esCorrecto": {
            "type": "boolean"
          },
          "valor": {
            "$ref": "#/components/schemas/ProductoDTO"
          },
          "mensaje": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegistroPedidosDTO": {
        "type": "object",
        "properties": {
          "pedido": {
            "$ref": "#/components/schemas/PedidoDTO"
          },
          "detalles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DetallePedidoDTO"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegistroPedidosDTOListResponseAPI": {
        "type": "object",
        "properties": {
          "esCorrecto": {
            "type": "boolean"
          },
          "valor": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RegistroPedidosDTO"
            },
            "nullable": true
          },
          "mensaje": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UsuarioDTO": {
        "required": [
          "correo",
          "nombre",
          "rol"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nombre": {
            "maxLength": 100,
            "minLength": 0,
            "pattern": "^[a-zA-ZáéíóúÁÉÍÓÚñÑ\\s]*$",
            "type": "string"
          },
          "correo": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "rol": {
            "maxLength": 23,
            "minLength": 0,
            "pattern": "^(Administrador|Personal Administrativo|Vendedor)$",
            "type": "string"
          },
          "clave": {
            "type": "string",
            "nullable": true
          },
          "claveConfirmacion": {
            "type": "string",
            "nullable": true
          },
          "edicion": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "UsuarioDTOResponseAPI": {
        "type": "object",
        "properties": {
          "esCorrecto": {
            "type": "boolean"
          },
          "valor": {
            "$ref": "#/components/schemas/UsuarioDTO"
          },
          "mensaje": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
