{
  "openapi": "3.0.4",
  "info": {
    "title": "BSC Evaluación Técnica API",
    "description": "API para el sistema de evaluación técnica.",
    "version": "v1"
  },
  "paths": {
    "/api/Acceso/Login": {
      "post": {
        "tags": [
          "Acceso"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Acceso/ValidarToken": {
      "get": {
        "tags": [
          "Acceso"
        ],
        "parameters": [
          {
            "name": "token",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/PermisoModulos/ConsultarModulosUsuario/{id}": {
      "get": {
        "tags": [
          "PermisoModulos"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Usuario/Consultar": {
      "get": {
        "tags": [
          "Usuario"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginDTO": {
        "required": [
          "clave",
          "correo"
        ],
        "type": "object",
        "properties": {
          "correo": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "clave": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}