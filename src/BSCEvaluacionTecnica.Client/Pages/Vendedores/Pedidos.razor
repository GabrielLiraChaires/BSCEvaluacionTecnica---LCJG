    private async Task GuardarPedido()
    {
        var autenticacionExt = (AutenticacionExtension)autenticacionProvider; //Crear variable para la autentificación.
        var sesion = await autenticacionExt.GetAuthenticationStateAsync();
        var tokenValido = await accesoService.ValidarToken(sesion.User.FindFirst("Token")!.Value.ToString()); //Revisar si el token es valido.

        if (tokenValido != null && tokenValido.Equals("Token válido"))
        {
            try
            {
                if (detallesPedido?.Count()!=0)
                {
                    var resultado = await swal.FireAsync(new SweetAlertOptions
                    {
                        Title = "Confirmación",
                        Text = $"¿Estás seguro de que deseas realizar este pedido?",
                        Icon = SweetAlertIcon.Question,
                        ShowCancelButton = true,
                        ConfirmButtonText = "Sí",
                        CancelButtonText = "No"
                    });
                    if (resultado.IsConfirmed)
                    {
                        //Fecha y hora.
                        var zonaHoraria = TimeZoneInfo.FindSystemTimeZoneById("America/Mexico_City");
                        var horario = TimeZoneInfo.ConvertTime(DateTime.UtcNow, zonaHoraria);

                        //Generando el formato para el envio de la petición.
                        RegistroPedidosDTO pedidosDTO = new RegistroPedidosDTO
                        {
                            Pedido = new PedidoDTO
                            {
                                Id = 0,
                                FechaHora = horario,
                                Cliente = pedido.Cliente,
                                FkIdVendedor = Convert.ToInt32(sesion.User.FindFirst(ClaimTypes.NameIdentifier)?.Value)
                            },
                            Detalles = detallesPedido
                        };

                        //Petición.
                        var respuesta = await pedidosService.Guardar(pedidosDTO);
                        if (respuesta.EsCorrecto)
                        {
                            //Extraer a los pedidos y productos.
                            pedidos = respuesta.Valor;
                            pedidosFiltrados = pedidos;
                            productos = await productoService.Consultar();
                            productosFiltrados = productos;
                            StateHasChanged();

                            await swal.FireAsync(new SweetAlertOptions
                            {
                                Title = "¡Éxito!",
                                Text = $"Pedido del cliente {pedidosDTO.Pedido.Cliente} ha sidó guardado correctamente.",
                                Icon = SweetAlertIcon.Success
                            });
                            StateHasChanged();
                            await JS.InvokeVoidAsync("minimizarModal", "modalPedido");
                        }
                        else
                        {
                            await swal.FireAsync(new SweetAlertOptions
                            {
                                Title = "¡Error!",
                                Text = respuesta.Mensaje,
                                Icon = SweetAlertIcon.Error
                            });
                        }
                    }
                }
                else
                {
                    await swal.FireAsync(new SweetAlertOptions
                    {
                        Title = "¡Atención!",
                        Text = $"Es necesario que como mínimo selecciones un producto para realizar el pedido.",
                        Icon = SweetAlertIcon.Info
                    });
                }
            }
            catch (Exception)
            {
                await swal.FireAsync(new SweetAlertOptions
                {
                    Title = "¡Error!",
                    Text = $"Ocurrio un error al guardar el pedido, intenta nuevamente.",
                    Icon = SweetAlertIcon.Error
                });
            }
        }
        else
        {
            await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Error",
                Text = tokenValido,
                Icon = SweetAlertIcon.Error
            });
            //Cerrar sesión y redirigir a logín.
            await autenticacionExt.ActualizarEstadoAutenticacion(null);
        }
    }
