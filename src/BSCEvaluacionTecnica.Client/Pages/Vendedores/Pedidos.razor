@code {
    //Funciones JS.
    [Inject] IJSRuntime JS { get; set; }
    //Acceso a el módulo.
    int accesoModulo = 0;
    List<RegistroPedidosDTO>? pedidos = new List<RegistroPedidosDTO>();
    List<RegistroPedidosDTO>? pedidosFiltrados = new List<RegistroPedidosDTO>();
    RegistroPedidosDTO? registrosPedido = new RegistroPedidosDTO();
    PedidoDTO? pedido = new PedidoDTO();
    List<ProductoDTO>? productos = new List<ProductoDTO>();
    List<ProductoDTO>? productosFiltrados = new List<ProductoDTO>();
    List<DetallePedidoDTO>? detallesPedido = new List<DetallePedidoDTO>();

    //Barra de busqueda
    string textoBusqueda = string.Empty;
    string textoBusquedaProductos = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var autenticacionExt = (AutenticacionExtension)autenticacionProvider; //Crear variable para autenticación.
            var sesion = await autenticacionExt.GetAuthenticationStateAsync(); //Obtener el estado de la autenticación actual.

            if (sesion.User.Identity!.IsAuthenticated) //Si el usuario está autenticado.
            {
                var tokenValido = await accesoService.ValidarToken(sesion.User.FindFirst("Token")!.Value.ToString()); // Revisar si el token es válido.

                if (tokenValido != null && tokenValido.Equals("Token válido")) //Si el token es válido.
                {
                    var acceso = await permisoModulosService.ConsultarModulosUsuario(Convert.ToInt32(sesion.User.FindFirst(ClaimTypes.NameIdentifier)?.Value)); //Consulta de módulos.
                    if (acceso.Find(x => x.ModuloSistema!.Equals("RealizarPedidos-Vendedores"))!.Acceso!.Equals("Permitido")) //Si el usuario tiene acceso al módulo.
                    {
                        accesoModulo = 1;

                        //Extraer a los pedidos y productos.
                        pedidos = await pedidosService.HistorialPedidosVendedor(Convert.ToInt32(sesion.User.FindFirst(ClaimTypes.NameIdentifier)?.Value));
                        pedidosFiltrados = pedidos;
                        productos = await productoService.Consultar();
                        productosFiltrados = productos;
                    }
                    else
                    {
                        accesoModulo = 2;
                    }
                }
                else //Si no es válido mostrar mensaje de error.
                {
                    await swal.FireAsync(new SweetAlertOptions
                    {
                        Title = "Error",
                        Text = tokenValido,
                        Icon = SweetAlertIcon.Error
                    });
                    //Cerrar sesión y redirigir a logín.
                    await autenticacionExt.ActualizarEstadoAutenticacion(null);
                    navegacion.NavigateTo("/");
                }
            }
            else
            {
                accesoModulo = 2;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error al cargar la página, detalles: " + ex);
            //Cerrar sesión y redirigir a login
            var autenticacionExt = (AutenticacionExtension)autenticacionProvider;
            await autenticacionExt.ActualizarEstadoAutenticacion(null);
            navegacion.NavigateTo("/", true);
        }
    }

    #region "Seleccionar y administrar pedidos"
    private async void SeleccionarPedido(RegistroPedidosDTO registroPedidoSeleccionado)
    {
        //Validar cuando el usuario seleccione editar al usuario.
        registrosPedido = new RegistroPedidosDTO
        {
            Pedido = registroPedidoSeleccionado.Pedido,
            Detalles = registroPedidoSeleccionado.Detalles
        };
        StateHasChanged();
        await JS.InvokeVoidAsync("abrirModal", "modalDetalles");
    }
    private void Filtrar(ChangeEventArgs e)
    {
        textoBusqueda = e.Value?.ToString() ?? "";
        if (string.IsNullOrWhiteSpace(textoBusqueda))
        {
            pedidosFiltrados = pedidos;
        }
        else
        {
            pedidosFiltrados = pedidos?.Where(v =>
                v.Pedido.FechaHora.ToString("dd/MM/yyyy HH:mm").Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase) ||
                v.Pedido.Vendedor.Nombre.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase) ||
                v.Pedido.Cliente.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }
    }
    private void LimpiarFiltro()
    {
        textoBusqueda = string.Empty;
        pedidosFiltrados = pedidos;
    }
    private async void NuevoPedido()
    {
        pedido = new PedidoDTO();
        detallesPedido = new List<DetallePedidoDTO>();
        await JS.InvokeVoidAsync("abrirModal", "modalPedido");
    }
    private void FiltrarProductos(ChangeEventArgs e)
    {
        textoBusqueda = e.Value?.ToString() ?? "";
        if (string.IsNullOrWhiteSpace(textoBusqueda))
        {
            productosFiltrados = productos;
        }
        else
        {
            productosFiltrados = productos?.Where(v =>
                v.Nombre.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase) ||
                v.Clave.Contains(textoBusqueda, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }
    }
    private void LimpiarFiltroProductos()
    {
        textoBusqueda = string.Empty;
        productosFiltrados = productos;
    }
    private async Task SeleccionProducto(ProductoDTO productoSeleccionado)
    {
        //Ingreso de unidades.
        var resultado = await swal.FireAsync(new SweetAlertOptions
        {
            Title = "¿Cuántas unidades?",
            Text = $"¿Cuántas unidades de \"{productoSeleccionado.Nombre}\" deseas tomar?",
            Icon = SweetAlertIcon.Question,
            Input = SweetAlertInputType.Number,
            InputAttributes = new Dictionary<string, string>
            {
                ["min"] = "1",
                ["step"] = "1",
                ["placeholder"] = "Ingresa un número"
            },
            ShowCancelButton = true,
            ConfirmButtonText = "Aceptar",
            CancelButtonText = "Cancelar"
        });

        if (resultado.IsConfirmed && int.TryParse(resultado.Value, out int unidades) && unidades > 0)
        {
            if (unidades > productoSeleccionado.Existencias)
            {
                await swal.FireAsync(new SweetAlertOptions
                {
                    Title = "¡Atención!",
                    Text = $"Estan intentando tomar mas productos de los existentes, tienes que escoger una cantidad menor o igual a {productoSeleccionado.Existencias}",
                    Icon = SweetAlertIcon.Error
                });
            }
            else
            {
                var existe = detallesPedido.Where(x => x.FKClaveProducto == productoSeleccionado.Clave).FirstOrDefault();
                //Si no existe el producto ya.
                if (existe is null)
                {
                    detallesPedido?.Add(new DetallePedidoDTO
                    {
                        FkIdPedido = 0,
                        FKClaveProducto = productoSeleccionado.Clave,
                        Cantidad = unidades,
                        SubTotal = unidades * productoSeleccionado.CostoUnidad,
                        Producto = new ProductoDTO
                        {
                            Clave = productoSeleccionado.Clave,
                            Nombre = productoSeleccionado.Nombre,
                            Existencias = productoSeleccionado.Existencias,
                            CostoUnidad = productoSeleccionado.CostoUnidad
                        }
                    });
                    var existencias = productos.Where(x => x.Clave == productoSeleccionado.Clave).Select(x => x.Existencias).FirstOrDefault();
                    var total = existencias - unidades;
                    productos.First(x => x.Clave == productoSeleccionado.Clave).Existencias = total;
                    productosFiltrados = productos;
                    StateHasChanged();
                    await JS.InvokeVoidAsync("minimizarModal", "modalProductos");
                    await JS.InvokeVoidAsync("abrirModal", "modalPedido");
                }
                //Si ya existe solo sumamos unidades.
                else
                {
                    //Existencias de el registrio para el guardado del pedido.
                    var existenciasPedido = detallesPedido.Where(x => x.FKClaveProducto == productoSeleccionado.Clave).Select(x => x.Cantidad).FirstOrDefault();
                    var totalPedido = existenciasPedido + unidades;
                    detallesPedido.First(x => x.FKClaveProducto == productoSeleccionado.Clave).Cantidad = totalPedido;
                    //Existencias de productos.
                    var existencias = productos.Where(x => x.Clave == productoSeleccionado.Clave).Select(x => x.Existencias).FirstOrDefault();
                    var total = existencias - unidades;
                    productos.First(x => x.Clave == productoSeleccionado.Clave).Existencias = total;
                    productosFiltrados = productos;
                    StateHasChanged();
                    await JS.InvokeVoidAsync("minimizarModal", "modalProductos");
                    await JS.InvokeVoidAsync("abrirModal", "modalPedido");
                }
            }
        }
        else if (resultado.IsConfirmed)
        {
            await swal.FireAsync("Error", "Debes ingresar un número válido (>= 1).", SweetAlertIcon.Error);
        }
    }
    private async void CancelarProducto(DetallePedidoDTO productoSeleccionado)
    {
        detallesPedido.RemoveAll(x => x.FKClaveProducto == productoSeleccionado.FKClaveProducto);
        var existencias = productos.Where(x => x.Clave == productoSeleccionado.FKClaveProducto).Select(x => x.Existencias).FirstOrDefault();
        var total = existencias + productoSeleccionado.Cantidad;
        productos.First(x => x.Clave == productoSeleccionado.FKClaveProducto).Existencias = total;
        productosFiltrados = productos;
        StateHasChanged();
    }
